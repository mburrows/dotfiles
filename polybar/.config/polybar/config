[bar/master]
width = 100%:-24
height = 32
radius = 0
offset-x = 12
offset-y = 12
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 1 
border-color = ${colors.color8}

padding-left = 2
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = "Noto Sans:size=11;1"
font-1 = "DroidSansMono Nerd Font:size=12;2"

modules-left = bspwm 
modules-center = xwindow 
modules-right = volume filesystem memory cpu temperature date settings powermenu

tray-position = right
tray-padding = 2

wm-restack = bspwm

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

[bar/left]
inherit = bar/master
monitor = DP-0
modules-left = bspwm
modules-center =
modules-right =

[bar/middle]
inherit = bar/master
monitor = DP-2

[bar/right]
inherit = bar/master
monitor = DP-4
modules-left = bspwm
modules-center =
modules-right =

[module/xwindow]
type = internal/xwindow
label = %title:0:75:...%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
format-mounted-prefix = "  "
format-mounted-underline = ${colors.color3}
label-mounted = %{A1:thunar:}%percentage_used%%%{A}
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}
label-mounted-underline = ${colors.color3}

[module/bspwm]
type = internal/bspwm
module-margin-left = 8
module-margin-right = 4
label-focused = %name%
label-focused-background = ${colors.background}
label-focused-foreground = ${colors.color4}
label-focused-underline= ${colors.color9}
label-focused-padding = 1

label-occupied = 
label-occupied-foreground = ${colors.color1}
label-occupied-padding = 1

label-urgent = 
label-urgent-background = ${colors.color1}
label-urgent-padding = 1

label-empty = 
label-empty-foreground = ${colors.foreground}
label-empty-padding = 1

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.color1}
label = %{A1:gnome-system-monitor:}%percentage:2%%%{A}

[module/memory]
type = internal/memory
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.color6} 
label = %percentage_used%%

[module/eth]
type = internal/network
interface = net0
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%
format-disconnected =

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %A %d %B, %Y"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = " "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.color4} 

label = %date% %time%

[module/volume]
type = internal/alsa

format-volume = <label-volume> <bar-volume>
label-volume = " "
label-volume-foreground = ${colors.foreground} 

format-muted-prefix = "  "
format-muted-foreground = ${colors.foreground}
label-muted = muted

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.color2}
bar-volume-foreground-1 = ${colors.color2}
bar-volume-foreground-2 = ${colors.color2}
bar-volume-foreground-3 = ${colors.color2}
bar-volume-foreground-4 = ${colors.color2}
bar-volume-foreground-5 = ${colors.color3}
bar-volume-foreground-6 = ${colors.color1}
bar-volume-gradient = false
bar-volume-indicator = 絛
bar-volume-indicator-font = 1
bar-volume-fill = 絛
bar-volume-fill-font = 1
bar-volume-empty = 絛
bar-volume-empty-font = 1
bar-volume-empty-foreground = ${colors.foreground-alt}


[module/temperature]
type = internal/temperature
thermal-zone = 3
warn-temperature = 70

format = <ramp> <label>
format-underline = ${colors.secondary}
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground}

[module/powermenu]
